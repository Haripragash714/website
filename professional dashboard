    <!-- JavaScript for dynamic functionality -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Initialize Lucide icons
            try {
                lucide.createIcons();
            } catch (error) {
                console.error("Error initializing Lucide icons:", error);
            }

            const sidebar = document.getElementById('sidebar');
            const sidebarToggleBtn = document.getElementById('sidebar-toggle-btn');
            const closeSidebarBtn = document.getElementById('close-sidebar-btn');
            const navButtons = document.querySelectorAll('.nav-button');
            const contentPages = document.querySelectorAll('.content-page');
            const headerTitle = document.getElementById('header-title');
            
            // General message modal
            const messageModal = document.getElementById('message-modal');
            const modalTitle = document.getElementById('modal-title');
            const modalMessage = document.getElementById('modal-message');

            // Services page elements
            const addServiceBtn = document.getElementById('add-service-btn');
            const servicesList = document.getElementById('services-list');
            
            // Services selection modal elements
            const servicesModal = document.getElementById('services-modal');
            const servicesCheckboxesContainer = document.getElementById('services-checkboxes');
            const saveServicesBtn = document.getElementById('save-services-btn');
            const selectAllBtn = document.getElementById('select-all-btn');
            const resetServicesBtn = document.getElementById('reset-services-btn');

            // Define all possible services and the current selection
            const allServices = ['Electrician', 'AC-Service Mechanic', 'Plumber', 'Mechanic', 'House Shifting'];
            let selectedServices = [...allServices]; // Initially, all services are selected

            // Function to render the services list on the page
            const renderServicesList = () => {
                servicesList.innerHTML = '';
                if (selectedServices.length === 0) {
                    const noServicesItem = document.createElement('li');
                    noServicesItem.className = 'py-4 text-lg font-medium text-gray-400 text-center';
                    noServicesItem.textContent = 'No services selected. Click "Add" to select some!';
                    servicesList.appendChild(noServicesItem);
                } else {
                    selectedServices.forEach(service => {
                        const li = document.createElement('li');
                        li.className = 'py-4 text-lg font-medium text-gray-700 hover:bg-gray-50 transition-colors duration-200 px-2 rounded-lg cursor-pointer';
                        li.textContent = service;
                        servicesList.appendChild(li);
                    });
                }
            };
            
            // Function to render the services checkboxes in the modal
            const renderServicesModal = () => {
                servicesCheckboxesContainer.innerHTML = '';
                allServices.forEach(service => {
                    const isChecked = selectedServices.includes(service);
                    const checkboxHtml = `
                        <label class="flex items-center space-x-3 text-gray-700">
                            <input type="checkbox" name="service" value="${service}" class="form-checkbox h-5 w-5 text-teal-500 rounded-md" ${isChecked ? 'checked' : ''}>
                            <span class="text-base">${service}</span>
                        </label>
                    `;
                    servicesCheckboxesContainer.innerHTML += checkboxHtml;
                });
            };

            // Function to show a specific page and hide others
            const showPage = (pageId) => {
                contentPages.forEach(page => {
                    page.classList.add('hidden');
                });
                document.getElementById(`${pageId}-page`).classList.remove('hidden');
            };

            // Function to set the active navigation button and header title
            const setActiveButton = (activeButton) => {
                navButtons.forEach(button => {
                    button.classList.remove('bg-gray-900', 'text-teal-400');
                });
                activeButton.classList.add('bg-gray-900', 'text-teal-400');
                headerTitle.textContent = activeButton.querySelector('span').textContent;
            };

            // Event listeners for navigation buttons
            navButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const pageId = button.getAttribute('data-page');
                    showPage(pageId);
                    setActiveButton(button);
                    // Hide sidebar on mobile after clicking a link
                    if (window.innerWidth < 768) {
                        sidebar.classList.add('-translate-x-full');
                    }
                });
            });

            // Mobile sidebar toggle functionality
            sidebarToggleBtn.addEventListener('click', () => {
                sidebar.classList.remove('-translate-x-full');
            });
            closeSidebarBtn.addEventListener('click', () => {
                sidebar.classList.add('-translate-x-full');
            });

            // Modal functions
            window.showModal = (title, message) => {
                modalTitle.textContent = title;
                modalMessage.textContent = message;
                messageModal.classList.remove('hidden', 'opacity-0');
                messageModal.classList.add('show', 'opacity-100');
            };

            window.closeModal = () => {
                messageModal.classList.remove('show', 'opacity-100');
                messageModal.classList.add('opacity-0');
                setTimeout(() => {
                    messageModal.classList.add('hidden');
                }, 300);
            };

            // Services modal functions
            addServiceBtn.addEventListener('click', () => {
                renderServicesModal();
                servicesModal.classList.remove('hidden', 'opacity-0');
                servicesModal.classList.add('show', 'opacity-100');
            });

            window.closeServicesModal = () => {
                servicesModal.classList.remove('show', 'opacity-100');
                servicesModal.classList.add('opacity-0');
                setTimeout(() => {
                    servicesModal.classList.add('hidden');
                }, 300);
            };
            
            saveServicesBtn.addEventListener('click', () => {
                const checkedServices = Array.from(servicesCheckboxesContainer.querySelectorAll('input[name="service"]:checked'))
                                             .map(checkbox => checkbox.value);
                selectedServices = checkedServices;
                renderServicesList();
                closeServicesModal();
            });

            selectAllBtn.addEventListener('click', () => {
                servicesCheckboxesContainer.querySelectorAll('input[name="service"]').forEach(checkbox => {
                    checkbox.checked = true;
                });
            });

            resetServicesBtn.addEventListener('click', () => {
                servicesCheckboxesContainer.querySelectorAll('input[name="service"]').forEach(checkbox => {
                    checkbox.checked = false;
                });
            });


            // Copy to clipboard functionality (without alert)
            window.copyToClipboard = (text) => {
                const tempInput = document.createElement('input');
                tempInput.value = text;
                document.body.appendChild(tempInput);
                tempInput.select();
                try {
                    document.execCommand('copy');
                    showModal('Copied!', `Mobile number ${text} copied to clipboard.`);
                } catch (err) {
                    console.error('Failed to copy text', err);
                    showModal('Error', 'Failed to copy to clipboard.');
                }
                document.body.removeChild(tempInput);
            };

            // Initially show the dashboard page and set active button, and render the initial services list
            showPage('dashboard');
            setActiveButton(document.querySelector('[data-page="dashboard"]'));
            renderServicesList();
        });
    </script>
</body>
</html>
